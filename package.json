{
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run dev:frontend\"",
    "start:backend": "cd backend && cross-env NODE_ENV=development PORT=4001 npm start",
    "dev:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "serve:frontend": "cd frontend && npm run preview"
  },
  "dependencies": {
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3"
  }
}
